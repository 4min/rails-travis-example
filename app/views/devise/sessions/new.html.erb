<section id="content">
<div class="sub-content">
  <div class="container">
  	<div class="row">


        <div class="span6">
	<h4>Sign in</h4>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal" }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, :placeholder => 'Your Email' %>
    <%= f.input :password, :required => false, :placeholder => 'Your Password' %>
    <div class="control-group">
    <div class="controls">
    <%= f.button :submit, "Sign in", :class=>"btn btn_" %>
  </div>
  </div>
    
  </div>
  
<% end %>
	<%= render "devise/shared/links" %>

</div>


</div>
</div>
</div>
</section>