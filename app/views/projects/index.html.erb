<h1>Projects</h1>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Priority</th>
    <th>Rank</th>
    <th>Tier</th>
    <th>Verified</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= raw project.name %></td>
    <td><%= project.description %></td>
    <td><%= project.priority %></td>
    <td><%= project.rank %></td>
    <td><%= project.tier %></td>
    <td><%= project.verified %></td>
    <td class="event-button-col"><%= button_to 'Details', project_path(project), :class=>"btn btn-mini btn-info", 
					:method=> "get" %></td>
    <td class="event-button-col"><%= button_to 'Edit', edit_project_path(project), :class=>"btn btn-mini btn-warning", 
					:method=> "get" %></td>
    <td class="event-button-col"><%= button_to 'Destroy', project_path(project), :class=>"btn btn-mini btn-danger", 
					method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

